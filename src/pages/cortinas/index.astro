---
<DefaultLayout {...metadata}>
<Hero
  title="Cortinas"
  subtitle="Elegancia y funcionalidad para cada espacio de tu hogar"
  image="https://res.cloudinary.com/di92lsbym/image/upload/f_auto,q_auto,w_800/Sundeco/SunsetWeb.EnrollableBlackOutBlanca.Dormitorio_tsqhqp"
/>

<div class="container mx-auto px-4 py-8">
  <div class="flex flex-wrap justify-center gap-4">
    {curtainTypes.map((curtain) => (
      <button
        onclick={`document.getElementById('${curtain.id}').scrollIntoView({behavior: 'smooth'})`}
        class="bg-gray-100 hover:bg-gray-200 text-gray-800 px-4 py-2 rounded-full transition-all hover:scale-105"
      >
        {curtain.name}
      </button>
    ))}
  </div>
</div>

<style>
  .fade-in-up {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.8s forwards;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .fade-in-up-container {
    animation-delay: var(--delay, 0s);
  }

  .hover-scale {
    transition: transform 0.3s;
  }

  .hover-scale:hover {
    transform: scale(1.02);
  }

  .hover-button:hover {
    transform: scale(1.05);
  }
</style>

<div class="container mx-auto px-4 py-16">
  <div class="space-y-24">
    {curtainTypes.map((curtain, index) => (
      <div
        id={curtain.id}
        key={curtain.id}
        class={`flex flex-col gap-8 fade-in-up fade-in-up-container ${index % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse'}`}
        style={{ '--delay': `${index * 0.2}s` }}
      >
        <div class="md:w-1/2 hover-scale">
          <img
            src={curtain.image}
            alt={curtain.name}
        
            class="rounded-lg m-auto h-[300px] md:h-[600px] w-[300px] md:w-[600px] object-cover shadow-lg transition-shadow hover:shadow-xl"
          />
        </div>
        <div class="flex flex-col justify-center md:w-1/2">
          <h2 class="mb-4 text-3xl font-semibold fade-in-up">
            {curtain.name}
          </h2>
          <p class="mb-6 text-gray-600 fade-in-up">
            {curtain.description}
          </p>
          <div class="fade-in-up">
            <a 
              href={`https://wa.me/543412126487?text=${encodeURIComponent(`Hola, quiero consultar por ${curtain.name}. Gracias.`)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-block bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded hover-button transition-transform"
            >
              Solicitar Presupuesto
            </a>
         
          </div>
        </div>
      </div>
    ))}
       <SunsetDistributor />
  </div>
</div>
</DefaultLayout>
