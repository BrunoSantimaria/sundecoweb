<section class="py-24">
  <div class="container mx-auto px-4">
    <!-- Header Section -->
    <div
      class="header-section mb-12 text-center opacity-0 translate-y-5 transition-transform duration-700 ease-out"
      on:load={() => {
        document
          .querySelector(".header-section")
          ?.classList.add("opacity-100", "translate-y-0");
      }}
    >
      <h2 class="text-3xl font-bold tracking-tight sm:text-4xl">Contacto</h2>
      <p class="mt-4 text-lg text-gray-600">Estamos para asesorarte</p>
    </div>

    <!-- Content Grid -->
    <div class="grid gap-8 lg:grid-cols-2">
      <!-- Form Section -->
      <div
        class="form-section opacity-0 -translate-x-5 transition-transform duration-700 ease-out"
        on:load={() => {
          document
            .querySelector(".form-section")
            ?.classList.add("opacity-100", "translate-x-0");
        }}
      >
        <div class="bg-white shadow rounded-lg p-6">
          <form class="space-y-6">
            <div>
              <input
                type="text"
                placeholder="Nombre"
                class="input-field w-full border border-gray-300 rounded-md p-3"
              />
            </div>
            <div>
              <input
                type="email"
                placeholder="Email"
                class="input-field w-full border border-gray-300 rounded-md p-3"
              />
            </div>
            <div>
              <input
                type="text"
                placeholder="Teléfono"
                class="input-field w-full border border-gray-300 rounded-md p-3"
              />
            </div>
            <div>
              <textarea
                placeholder="Mensaje"
                class="textarea-field w-full border border-gray-300 rounded-md p-3 min-h-[150px]"
              ></textarea>
            </div>
            <button class="w-full bg-blue-600 text-white py-3 rounded-md hover:bg-blue-700 transition">
              Enviar Mensaje
            </button>
          </form>
        </div>
      </div>

      <!-- Info Section -->
      <div
        class="info-section opacity-0 translate-x-5 transition-transform duration-700 ease-out"
        on:load={() => {
          document
            .querySelector(".info-section")
            ?.classList.add("opacity-100", "translate-x-0");
        }}
      >
        <div class="space-y-6">
          <!-- Email Card -->
          <div class="bg-white shadow rounded-lg p-6 flex items-center gap-4">
            <svg
              class="h-6 w-6 text-blue-600"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M16 12H3m13 0l-5-5m5 5l-5 5"
              />
            </svg>
            <div>
              <h3 class="font-semibold">Email</h3>
              <p class="text-gray-600">info@sundeco.com.ar</p>
            </div>
          </div>

          <!-- Phone Card -->
          <div class="bg-white shadow rounded-lg p-6 flex items-center gap-4">
            <svg
              class="h-6 w-6 text-blue-600"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 10h11M3 10l5-5m0 0l5 5"
              />
            </svg>
            <div>
              <h3 class="font-semibold">Teléfono</h3>
              <p class="text-gray-600">(+54) 341212-6487</p>
            </div>
          </div>

          <!-- Address Card -->
          <div class="bg-white shadow rounded-lg p-6 flex items-center gap-4">
            <svg
              class="h-6 w-6 text-blue-600"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 11c3.3137 0 6 2.6863 6 6s-2.6863 6-6 6-6-2.6863-6-6 2.6863-6 6-6z"
              />
            </svg>
            <div>
              <h3 class="font-semibold">Dirección</h3>
              <p class="text-gray-600">Rosario, Santa Fe CP 2000</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
