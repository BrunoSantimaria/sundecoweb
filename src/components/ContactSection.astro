---
import { Mail, Phone, MapPin } from 'lucide-react';
import ContactForm from './ContactForm';

// Movemos la lógica de email a un archivo separado de utilidades
import { sendEmail } from '../utils/email';
---

<section class="py-24">
  <div class="container mx-auto px-4">
    <div class="mb-12 text-center">
      <h2 class="text-3xl font-bold tracking-tight sm:text-4xl">Contacto</h2>
      <p class="mt-4 text-lg text-gray-600">Estamos para asesorarte</p>
    </div>
    <div class="grid gap-8 lg:grid-cols-2">
      <!-- Reemplazamos el formulario anterior con el componente React -->
      <div>
        <div class="bg-white rounded-lg shadow p-6">
          <ContactForm client:load />
        </div>
      </div>

      <!-- Información de Contacto -->
      <div class="space-y-6">
        <div class="bg-white rounded-lg shadow p-6 flex items-center gap-4">
          <Mail class="h-6 w-6 text-blue-600" />
          <div>
            <h3 class="font-semibold">Email</h3>
            <a href="mailto:info@sundeco.com.ar" class="text-gray-600">info@sundeco.com.ar</a>
          </div>
        </div>
        <div class="bg-white rounded-lg shadow p-6 flex items-center gap-4">
          <Phone class="h-6 w-6 text-blue-600" />
          <div>
            <h3 class="font-semibold">Teléfono</h3>
            <a href="tel:+543412126487" class="text-gray-600">(+54) 341-2126487</a>
          </div>
        </div>
        <div class="bg-white rounded-lg shadow p-6 flex items-center gap-4">
          <MapPin class="h-6 w-6 text-blue-600" />
          <div>
            <h3 class="font-semibold">Dirección</h3>
            <p class="text-gray-600">Rosario, Santa Fe CP 2000</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .toast {
    position: fixed;
    bottom: 20px;
    right: 20px;
    padding: 1rem;
    border-radius: 8px;
    color: white;
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
  }

  .toast.success {
    background-color: #48bb78;
  }

  .toast.error {
    background-color: #f56565;
  }

  .toast.show {
    opacity: 1;
  }
</style>
