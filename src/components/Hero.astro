---
interface PageHeroProps {
  title: string;
  subtitle: string;
  image: string;
}
const { title, subtitle, image }: PageHeroProps = Astro.props;
---

<style>
  .hero-section {
    position: relative;
    height: 60vh;
    min-height: 400px;
    width: 100%;
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    inset: 0;
    z-index: 1;
  }

  .hero-background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 2;
  }

  .hero-content {
    position: relative;
    z-index: 3;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    text-align: center;
    color: white;
    animation: fadeIn 0.8s ease-out;
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 1rem;
    animation: slideInUp 0.8s ease-out;
  }

  .divider {
    width: 6rem;
    height: 0.25rem;
    background-color: #2563eb;
    margin: 1rem auto;
    animation: scaleIn 0.8s ease-out;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: #e5e7eb;
    animation: slideInUp 0.8s ease-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes slideInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes scaleIn {
    from {
      transform: scaleX(0);
      opacity: 0;
    }
    to {
      transform: scaleX(1);
      opacity: 1;
    }
  }
</style>

<section class="hero-section">
  <div class="hero-background">
    <img src={image} alt={title} loading="eager" class="h-full w-full object-cover  brightness-60 blur-sm"/>
    <div class="overlay"></div>
  </div>
  <div class="hero-content">
    <h1 class="hero-title">{title}</h1>
    <div class="divider"></div>
    <p class="hero-subtitle">{subtitle}</p>
  </div>
</section>
